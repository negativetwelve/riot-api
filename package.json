{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "3.0.9",
    "lint-staged": "10.4.0",
    "prettier": "2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  },
  "scripts": {
    "check:js": "prettier --check .",
    "format:js": "prettier --write .",
    "lint:js": "eslint --max-warnings 0 ."
  }
}
